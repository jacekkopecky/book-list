{
  "compilerOptions": {
    "outDir": "./dist-ts/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/",
    "./server/config.js"
  ]
}
